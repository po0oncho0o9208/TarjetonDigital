<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="MenÃº Principal"
        android:textColor="#345c1f"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="32dp">


            <Button
                android:id="@+id/activ"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botonprincipal"
                android:onClick="activos"
                android:text="ACTIVOS"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/jubilad"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botonprincipal"
                android:onClick="jubilados"
                android:text="JUBILADOS"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:typeface="monospace" />


            <Button
                android:id="@+id/calendario"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botonprincipal"
                android:onClick="calendario"
                android:text="Calendario de pago"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/Documentosimss"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botonprincipal"
                android:onClick="documentos"
                android:text="documentos imss"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/promociones"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botonprincipal"
                android:onClick="promociones"
                android:text="Promociones"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:typeface="monospace" />


            <Button
                android:id="@+id/noticias"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botonprincipal"
                android:onClick="noti"
                android:text="Noticias"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/seguir"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botonprincipal"
                android:onClick="Compartir"
                android:text="Compartir"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:typeface="monospace" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-1984616735532779/7600594596" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
